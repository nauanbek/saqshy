# =============================================================================
# SAQSHY Bot Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Telegram Bot Settings
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your_bot_token_here
WEBHOOK_BASE_URL=https://your-domain.com
WEBHOOK_SECRET=your_webhook_secret_here

# -----------------------------------------------------------------------------
# Database Settings
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://saqshy:password@localhost:5432/saqshy
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# -----------------------------------------------------------------------------
# Redis Settings
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Qdrant Vector Database Settings
# -----------------------------------------------------------------------------
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=spam_embeddings

# -----------------------------------------------------------------------------
# Claude API Settings (Anthropic)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514

# -----------------------------------------------------------------------------
# Cohere Embeddings Settings
# -----------------------------------------------------------------------------
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=embed-multilingual-v3.0

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=development

# Default group settings
DEFAULT_GROUP_TYPE=general
DEFAULT_SENSITIVITY=5

# -----------------------------------------------------------------------------
# Mini App Settings
# -----------------------------------------------------------------------------
MINI_APP_URL=https://your-domain.com/app
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# -----------------------------------------------------------------------------
# Production PostgreSQL (used by docker-compose.prod.yml)
# -----------------------------------------------------------------------------
POSTGRES_USER=saqshy
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=saqshy

# -----------------------------------------------------------------------------
# Bot Server Settings
# -----------------------------------------------------------------------------
BOT_HOST=0.0.0.0
BOT_PORT=8080
